<main style="padding-left: 20px;">
  <h3>Productos disponibles</h3>

  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categoria</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody id="realTimeTable">
      {{#each productos}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>${{this.price}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.category}}</td>
          <td>
            <button>Agregar al carrito</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <br />

  {{#if hasPrevPage}}
    <a href="{{prevLink}}">anterior</a>
  {{/if}}

  {{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente</a>
  {{/if}}

</main>

