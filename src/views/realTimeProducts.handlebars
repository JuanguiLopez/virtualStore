<h1 style="padding-left: 20px;">Real time products</h1>

<div id="messages"></div>

<main class="main" style="padding-left: 20px;">

  <form id="formAddProduct" action="/api/products" method="POST">
    <h2>Formulario de Creacion de Producto</h2>
    <label for="title">Título</label>
    <input type="text" name="title" placeholder="Título" value="" />
    <label for="description">Descripción</label>
    <input type="text" name="description" placeholder="Descripción" value="" />
    <label for="code">Código</label>
    <input type="text" name="code" placeholder="Código" value="" />
    <br />
    <br />
    <label for="stock">Stock</label>
    <input type="number" name="stock" placeholder="Stock" value="" />
    <label for="stock">Precio</label>
    <input type="number" name="price" placeholder="Precio" value="" />
    <label for="category">Categoria</label>
    <input type="text" name="category" placeholder="Categoria" value="" />
    <br />
    <br />
    <label for="thumbnails">Thumbnails</label>
    <input type="file" name="thumbnails" placeholder="Thumbnails" multiple />
    <br />
    <br />
    <button id="btnAgregar" >Crear Producto</button>
  </form>
  <br />

  <h2 class="titulo">Productos Disponibles en tiempo real</h2>

  <table id="realTimeTable">
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Acciones</th>
    </tr>
    {{#each products}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>${{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>
          <button data-id="btnEliminar" id="{{this.id}}">Eliminar</button>
      </tr>
    {{/each}}
  </table>
  <br />
  <br />
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>